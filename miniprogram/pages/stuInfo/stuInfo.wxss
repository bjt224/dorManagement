/* miniprogram/pages/stuInfo/stuInfo.wxss */
.info {
  border-bottom: 1px solid #ccc;
  margin-bottom: 30rpx;
  font-size: 30rpx;
}

.info_item {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  margin: 10rpx;
  padding: 5rpx 10rpx;
  border-bottom: 1px solid #ccc;
  text-align: right;
}

.info_item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.info_item .picker {
  width: 200rpx;
}

.info_item:last-child {
  border: 0;
}

.picker image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.input {
  margin-top: 19rpx;
}

.button {
  text-align: center;
}

.button button {
  width: 200rpx;
  padding: 10rpx 10rpx;
  border: 1px solid #ccc;
}